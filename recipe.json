{
  "$jason": {
    "head": {
      "title": "{{$params.title}}",
      "description": "Recipe",
      "templates": {
        "body": {
          "style": {
            "background": "#ffffff",
            "border": "none"
          },
          "header": {
            "title": "{{$params.title}}",
            "style": {
              "background": "#429e80",
              "font": "HelveticaNeue-Bold",
              "size": "14",
              "shyt": "true",
              "color": "#ffffff"
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "vertical",
                  "style": {
                    "background": "#ffffff"
                  },
                  "components": [
                    {
                      "type": "vertical",
                      "style": {
                        "distribution": "fill",
                        "spacing": "0"
                      },
                      "components": [
                        {
                          "type": "label",
                          "style": {
                            "size": "18",
                            "color": "#FFF"
                          },
                          "text": "{{params.title}}"
                        },
                        {
                          "type": "image",
                          "url": "{{params.image}}",
                          "style": {
                            "width": "100%",
                            "padding": "0"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
          ]
        }
      }
    }
  }
}