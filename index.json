{
  "$jason": {
    "head": {
      "title": "All your recipes",
      "description": "Sorted by title",
      "actions": {
        "$pull": {
          "trigger": "fetch"
        },
        "$foreground": {
          "trigger": "fetch"
        },
        "$show": {
          "trigger": "fetch"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://raw.githubusercontent.com/hussfelt/jason-test/master/data/recipes.json"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#ffffff",
            "color": "#000000",
            "border": "none"
          },
          "header": {
            "title": "Your recipes",
            "style": {
              "background": "#429e80",
              "font": "HelveticaNeue-Bold",
              "size": "14",
              "shyt": "true",
              "color": "#ffffff"
            }
          },
          "sections": {
            "{{#each $jason.recipes.sort(function(a,b){  return new Date(b.created_at) - new Date(a.created_at);}) }}": {
              "header": {
                "type": "label",
                "text": "{{title}}",
                "style": {
                  "background": "#429e80",
                  "font": "HelveticaNeue-CondensedBold",
                  "padding": "10",
                  "color": "#ffffff",
                  "size": "14"
              },
              "items": [
                {
                  "type": "vertical",
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://raw.githubusercontent.com/hussfelt/jason-test/master/recipe.json",
                      "options": {
                        "id": "{{id}}",
                        "title": "{{title}}",
                        "image": "{{image}}"
                      }
                    }
                  },
                  "style": {
                    "padding": 0,
                    "background": "#ffffff"
                  },
                  "components": [
                    {
                      "type": "vertical",
                      "style": {
                        "distribution": "fill",
                        "spacing": "0"
                      },
                      "components": [
                        {
                          "type": "image",
                          "url": "{{image}}",
                          "style": {
                            "width": "100%",
                            "padding": "0"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}